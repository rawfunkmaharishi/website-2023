---
import { isActive } from "../lib/tools";

const navs = [
  {
    title: "Band",
    path: "/the-band/",
  },
  {
    title: "Gigs",
    path: "/gigs/"
  },
  {
    title: "Records",
    path: "/records/",
  },
  {
    title: "Videos",
    path: "/videos/",
  },
];

for(const property in navs) {
  if (isActive(navs[property]['path'], Astro.url.pathname)) {
    navs[property]['class'] = 'active'
  }
}

const { title } = Astro.props;
---

<nav>
  <ul>
    {
      navs.map((item) => (
        <li>
          <a href={item.path} class={item.class}>{item.title}</a>
        </li>
      ))
    }
  </ul>
</nav>


<style>
nav {
  grid-area: nav;
}

  ul {
    display: flex;
    width: 80%;
    margin-inline: auto;
  }

  li {
    list-style-type: none;
    flex-grow: 1;
    text-align: center;
    /* margin: 1rem; */
    margin-top: 2rem;
    font-size: 1rem;
  }

  nav a {
    text-decoration: none;
    padding: 0.5rem;
    border-radius: 0.5rem;
    border-width: 1px;
    border-style: solid;
    border-color: transparent;

    transition: border-color ease 0.5s;
  }

  nav a:hover, .active {
    border-color: var(--colour-border);
  }

  .active {
    color: var(--colour-primary);
  }
</style>

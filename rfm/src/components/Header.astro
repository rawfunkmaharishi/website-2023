---
import { isActive } from "../lib/tools";

const navs = [
  {
    title: "Band",
    path: "/the-band/",
  },
  {
    title: "Gigs",
    path: "/gigs/"
  },
  {
    title: "Records",
    path: "/records/",
  },
  {
    title: "Videos",
    path: "/videos/",
  },
];

for(const property in navs) {
  if (isActive(navs[property]['path'], Astro.url.pathname)) {
    navs[property]['class'] = 'active'
  }
}

const { title } = Astro.props;
---

<nav>
  <ul>
    {
      navs.map((item) => (
        <li>
          <a href={item.path} class={item.class}>{item.title}</a>
        </li>
      ))
    }
  </ul>
</nav>


<style>
nav {
  grid-area: nav;
}

  ul {
    display: flex;
    width: 80%;
    margin-inline: auto;
  }

  li {
    list-style-type: none;
    flex-grow: 1;
    text-align: center;
    margin: 1rem;
    margin-top: 2rem;
    font-size: 1rem;
  }

  a {
    text-decoration: none;
  }

  .active {
    color: var(--colour-primary);
  }
</style>

---
import moment from "moment";

const { eventSet, dateFormat, type } = Astro.props;

function getURL(url) {
  if (type) {
    url = url.replace("gigs", type);
  }

  return url;
}
---

<ul>
  {
    eventSet.items.map((event) => (
      <li>
        <a href={getURL(event.url)}>
          {moment(event.startDate).format(dateFormat)}
          <span class="venue">{event.location.name}</span>
        </a>
      </li>
    ))
  }
</ul>

<style>
  li {
    font-size: 1rem;
  }

  .venue {
    display: block;
    font-size: 1.5rem;
    margin-top: -0.25rem;
  }

  ul {
    display: grid;
    justify-content: center;
    height: 100%;
    align-items: center;
    padding: 0;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  @media only screen and (min-width: 600px) {
    ul {
      padding-top: 10rem;
      padding-bottom: 10rem;
    }
  }
</style>

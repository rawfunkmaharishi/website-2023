---
import moment from "moment";

const { record } = Astro.props;
---

<a href={record.url}>
  <img src={record.image.contentUrl} />
  <h2>
    {record.name}
    <small>({moment(record.datePublished).format("YYYY")})</small>
  </h2>
</a>

<style>
  h2 {
    font-size: 1rem;
    text-align: center;
  }

  img {
    height: 50vw;
    width: 50vw;
    margin-bottom: 0rem;
    object-fit: cover;
  }
</style>

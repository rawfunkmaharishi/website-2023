---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import conf from "../conf.json";

export interface Props {
  title: string;
}

const { title, jsonLD } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} jsonLD={jsonLD} />
  <body>
    <Header title={title} />
    <main>
      <div id="logo">
        <a href="/">
          <img src="/logos/rfm.svg" />
        </a>
        <h1>{title}</h1>
      </div>
      <div id="content">
        <slot />
      </div>
    </main>

    <style is:global>
      @import url("https://fonts.googleapis.com/css?family=Roboto");
      @import url("https://fonts.googleapis.com/css?family=Josefin+Sans");

      :root {
        --colour-background: rgb(27, 17, 4);
        --colour-panel: rgb(82, 64, 30);
        --colour-primary: rgb(121, 121, 121);
        --colour-link: rgb(104, 91, 30);
        --colour-link-hover: rgb(149, 130, 45);
        --colour-grey: rgb(46, 46, 46);

        --font-primary: Roboto;
        --font-heading: "Josefin Sans";

        --padding: 2rem;
      }
      html {
        font-family: var(--font-primary);
        background-color: var(--colour-background);
        color: var(--colour-primary);
      }
      * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
      }

      main {
        display: grid;
        grid-template-areas:
          "logo content"
          ". content";
        grid-template-columns: 2fr 3fr;
        grid-template-rows: 2fr auto;
        gap: var(--padding);

        margin: var(--padding);
      }

      @media only screen and (max-width: 600px) {
        main {
          grid-template-areas:
            "logo"
            "content";
          grid-template-columns: 1fr;
        }
      }

      div#content {
        width: 100%;
      }

      div#logo {
        grid-area: logo;
      }
      h1 {
        font-family: var(--font-heading);
        text-transform: uppercase;
        text-align: center;
        grid-area: title;
        padding-top: 3rem;
      }

      #content {
        grid-area: content;
      }
      a {
        color: var(--colour-link);
        text-decoration: none;
      }

      a:hover {
        color: var(--colour-link-hover);
      }

      li {
        list-style-type: none;
      }
      #paginators {
        padding-top: 5rem;
        font-size: 2rem;
      }

      /* responsive video */
      /* https://techstacker.com/how-to-responsive-youtube-videos/ */
      .video-wrapper {
        position: relative;
        overflow: hidden;
        width: 80%;
        margin-bottom: 2rem;
        margin-top: 1rem;
        margin-inline: auto;
      }

      .video-wrapper::after {
        display: block;
        content: "";
        padding-top: 56.25%;
      }

      .video-wrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
    </style>
  </body>
</html>

---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Logo from "../components/Logo.astro";
import ShareThis from "../components/ShareThis.astro";
import CalendarLinks from "../components/CalendarLinks.astro";

export interface Props {
  title?: string;
  shortTitle?: string;
  withSharing?: Boolean;
  withCalendars?: Boolean;
  jsonLD?: Object;
}

const { title, shortTitle, withSharing, withCalendars, jsonLD } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} jsonLD={jsonLD} />
  <body>
    <Header title={title} />
    <main>
      <div id="logo">
        <Logo />
        <h1 id="main-title">{shortTitle || title}</h1>
      </div>
      <div id="content">
        <slot />
      </div>
      <div id="ephemeral">
        {withSharing && <ShareThis />}
        {withCalendars && <CalendarLinks />}
      </div>
    </main>
    <Footer />

    <style is:global>
      * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
      }

      a {
        color: var(--colour-link);
        text-decoration: none;
        transition: color var(--transition-time);
      }

      a:hover {
        color: var(--colour-hover);
      }

      a.button {
        font-size: 0.8rem;
        cursor: pointer;
        background-color: var(--colour-link);
        color: var(--colour-background);
        padding: 0.5rem;
        border-radius: 0.3rem;
        margin: 0.2rem;
        transition: background-color var(--transition-time);
      }

      a.button:hover {
        background-color: var(--colour-hover);
        color: var(--colour-background);
      }

      @media (hover: none) {
        a:hover {
          color: var(--colour-link);
        }

        a.button:hover {
          background-color: var(--colour-link);
          color: var(--colour-background);
        }
      }

      li {
        list-style-type: none;
      }

      img {
        border-color: var(--colour-border);
        border-width: 1px;
        border-style: solid;
        border-radius: 0.4rem;
        height: 50vw;
        width: 50vw;
        margin-bottom: 0rem;
        object-fit: cover;
        margin-inline: auto;
      }

      h2 {
        text-align: center;
        font-size: 1rem;
      }
      @media only screen and (min-width: 600px) {
        img {
          height: 50dvh;
          width: 50dvh;
        }
      }
    </style>

    <style>
      :root {
        --transition-time: 500ms;
      }

      html {
        font-family: var(--font-primary);
        background-color: var(--colour-background);
        color: var(--colour-primary);
      }

      body {
        display: grid;
        grid-template-areas: "nav" "main" "footer";
        overflow: auto;
        grid-template-rows: auto auto 1fr;
        height: 100dvh;
        /* background-image: url("/textures/texture.png"); */
      }

      main {
        grid-area: main;
        display: grid;
        grid-template-areas:
          "logo"
          "content"
          "ephemeral";
        grid-template-rows: 1fr auto;
        gap: 1rem;
        margin-inline: 1rem;
      }

      div#content {
        width: 100%;
        position: relative;
        margin-top: 1rem;
        grid-area: content;
      }

      div#logo {
        grid-area: logo;
        margin-top: 1rem;
        padding-inline: 1rem;
      }

      h1 {
        font-family: var(--font-heading);
        text-transform: uppercase;
        text-align: center;
        grid-area: title;
        padding-top: 1rem;
        font-size: 1.8rem;
      }

      #ephemeral {
        grid-area: ephemeral;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      @media only screen and (min-width: 600px) {
        main {
          grid-template-areas:
            "logo content"
            "ephemeral content";
          grid-template-columns: 1fr 1.3fr;
          grid-template-rows: 1fr 1fr;
          margin-top: 1rem;
        }

        #ephemeral {
          margin-top: unset;
        }
      }
    </style>
  </body>
</html>

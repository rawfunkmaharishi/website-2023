---
import Layout from "../layouts/Layout.astro";
---

<Layout title="QR Code">
  <canvas id="qr"></canvas>
</Layout>

<style>
canvas {
    margin-inline: auto;
    display: block;
}
</style>

<script define:vars={{
    url: import.meta.env.SITE
}}>
  var canvas = document.getElementById("qr");

  QRCode.toCanvas(canvas, url, {width: 300}, function (error) {
    if (error) console.error(error);
    console.log("success!");
  });
</script>

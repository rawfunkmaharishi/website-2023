---
import Layout from "../layouts/Layout.astro";
import Slider from "../components/Slider.astro";

import { fetchFromAPI, getJSONLD } from "../lib/tools";

const band = await fetchFromAPI("raw-funk-maharishi")

---

<Layout title="The Band" jsonLD={getJSONLD(band)}>
  <Slider items={band.member} slideType="musician" />
</Layout>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
  }

  li {
    margin: auto;
    padding-bottom: 1rem;
    flex-basis: 40%;
  }
</style>
